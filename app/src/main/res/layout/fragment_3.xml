<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment3">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#151313"
        android:gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:text="Which of these access specifiers can be used for an interface?" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView11"
        android:textSize="20sp"
        android:layout_marginTop="150dp"
        android:id="@+id/radiogrp">

        <RadioButton
            android:id="@+id/answer1RB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="public" />

        <RadioButton
            android:id="@+id/answer2RB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="protected" />

        <RadioButton
            android:id="@+id/answer3RB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="private" />

        <RadioButton
            android:id="@+id/answer4RB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="All of the mentioned" />
    </RadioGroup>

</FrameLayout>